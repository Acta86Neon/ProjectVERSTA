<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.projectversta">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".AngelCircleFullscreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_angel_circle_fullscreen"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".AngelCircle"
            android:label="@string/ENGELSKREIS" />
        <activity
            android:name=".CircleOverview"
            android:label="@string/Conzept" />
        <activity
            android:name=".ViciousCircle"
            android:label="@string/TEUFELSKREIS" />
        <activity
            android:name=".Grounding"
            android:label="@string/GRUNDWISSEN" />
        <activity
            android:name=".Foreword"
            android:label="@string/FOREWORD" />
        <activity
            android:name=".AboutActor"
            android:label="@string/AboutActor" />
        <activity
            android:name=".AboutBook"
            android:label="@string/AboutBook" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>